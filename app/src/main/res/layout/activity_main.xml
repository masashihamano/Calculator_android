        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="83dp"
        android:layout_height="60dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="180dp"
        android:text="="
        android:textStyle="bold"/>

